@page
@model DnDungeons.Pages.Rooms.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<p class="text-danger">@Model.ErrorMessage</p>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Room</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.Created)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.Created)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.LastUpdated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.LastUpdated)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.Dungeon)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.Dungeon.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.Layout)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.Layout.Name)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Room.RoomNumber" />
        <input type="hidden" asp-for="Room.DungeonID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="/Dungeons/Details" asp-route-id="@Model.Room.DungeonID">Back to Dungeon</a>
    </form>
</div>
