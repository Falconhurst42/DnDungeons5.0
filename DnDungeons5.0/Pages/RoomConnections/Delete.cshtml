@page
@model DnDungeons.Pages.RoomConnections.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>RoomConnection</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RoomConnection.ConnectionPoint1)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoomConnection.ConnectionPoint1)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RoomConnection.ConnectionPoint2)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoomConnection.ConnectionPoint2)
        </dd>
        <dt class="col-sm-2">
