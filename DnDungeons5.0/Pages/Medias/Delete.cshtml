@page "{id:int}"
@model DnDungeons.Pages.Medias.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<p class="text-danger">@Model.ErrorMessage</p>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Media</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Media.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Media.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Media.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Media.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Media.Created)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Media.Created)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Media.LastUpdated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Media.LastUpdated)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Media.File)
        </dt>
        <dd class="col-sm-10">
            <!-- Razorpage image rendering from https://stackoverflow.com/questions/17952514/asp-net-mvc-how-to-display-a-byte-array-image-from-model -->
            <img src="data:image;base64,@System.Convert.ToBase64String(Model.Media.File)" width="300" height="300" class="rounded-0" />
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Media.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
