@page
@model DnDungeons.Pages.LootInRooms.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<p class="text-danger">@Model.ErrorMessage</p>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>LootInRoom</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LootInRoom.Count)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LootInRoom.Count)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LootInRoom.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LootInRoom.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LootInRoom.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LootInRoom.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LootInRoom.Loot)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LootInRoom.Loot.Name)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="LootInRoom.DungeonID" />
        <input type="hidden" asp-for="LootInRoom.RoomNum" />
        <input type="hidden" asp-for="LootInRoom.LootID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="/Dungeons/Details" asp-route-id="@Model.LootInRoom.DungeonID">Back to Dungeon</a>
    </form>
</div>
