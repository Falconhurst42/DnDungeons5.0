@page
@model DnDungeons.Pages.LootMedias.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Loot Media</h4>

<p class="text-danger">@Model.ErrorMessage</p>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LootMedia.LootID" />
            <div class="form-group">
                <label asp-for="LootMedia.MediaID" class="control-label"></label>
                <select asp-for="LootMedia.MediaID" class="form-control" asp-items="ViewBag.MediaID"></select>
                <span asp-validation-for="LootMedia.MediaID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LootMedia.MediaLabel" class="control-label"></label>
                <input asp-for="LootMedia.MediaLabel" class="form-control" />
                <span asp-validation-for="LootMedia.MediaLabel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Loots/Details" asp-route-id="@Model.LootMedia.LootID">Back to Loot</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
