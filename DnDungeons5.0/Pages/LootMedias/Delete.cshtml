@page
@model DnDungeons.Pages.LootMedias.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<p class="text-danger">@Model.ErrorMessage</p>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>LootMedia</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LootMedia.MediaLabel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LootMedia.MediaLabel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LootMedia.Loot)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LootMedia.Loot.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LootMedia.Media)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LootMedia.Media.Name)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="LootMedia.LootID" />
        <input type="hidden" asp-for="LootMedia.MediaID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="/Loots/Details" asp-route-id="@Model.LootMedia.LootID">Back to Loot</a>
    </form>
</div>
