@page
@model DnDungeons.Pages.LayoutMedias.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Layout</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LayoutMedia.MediaID" class="control-label"></label>
                <select asp-for="LayoutMedia.MediaID" class="form-control" asp-items="ViewBag.MediaID"></select>
            </div>
            <div class="form-group">
                <label asp-for="LayoutMedia.MediaLabel" class="control-label"></label>
                <input asp-for="LayoutMedia.MediaLabel" class="form-control" />
                <span asp-validation-for="LayoutMedia.MediaLabel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Layouts/Details" asp-route-id="@Model.LayoutID">Back to Layout</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
