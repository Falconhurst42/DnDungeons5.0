@page
@model DnDungeons.Pages.LayoutMedias.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<p class="text-danger">@Model.ErrorMessage</p>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Layout</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LayoutMedia.MediaLabel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LayoutMedia.MediaLabel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LayoutMedia.Layout)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LayoutMedia.Layout.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LayoutMedia.Media)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LayoutMedia.Media.Name)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="LayoutMedia.LayoutID" />
        <input type="hidden" asp-for="LayoutMedia.MediaID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="/Layouts/Details" asp-route-id="@Model.LayoutMedia.LayoutID">Back to Layout</a>
    </form>
</div>
