@page
@model DnDungeons.Pages.EnemyMedias.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<p class="text-danger">@Model.ErrorMessage</p>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>EnemyMedia</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnemyMedia.MediaLabel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnemyMedia.MediaLabel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnemyMedia.Enemy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnemyMedia.Enemy.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnemyMedia.Media)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnemyMedia.Media.Name)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="EnemyMedia.EnemyID" />
        <input type="hidden" asp-for="EnemyMedia.MediaID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="/Enemies/Details" asp-route-id="@Model.EnemyMedia.EnemyID">Back to Enemy</a>
    </form>
</div>
