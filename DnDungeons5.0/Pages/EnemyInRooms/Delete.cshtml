@page
@model DnDungeons.Pages.EnemyInRooms.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<p class="text-danger">@Model.ErrorMessage</p>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>EnemyInRoom</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnemyInRoom.Count)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnemyInRoom.Count)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnemyInRoom.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnemyInRoom.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnemyInRoom.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnemyInRoom.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnemyInRoom.Enemy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnemyInRoom.Enemy.Name)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="EnemyInRoom.DungeonID" />
        <input type="hidden" asp-for="EnemyInRoom.RoomNum" />
        <input type="hidden" asp-for="EnemyInRoom.EnemyID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="/Dungeons/Details" asp-route-id="@Model.EnemyInRoom.DungeonID">Back to Dungeon</a>
    </form>
</div>
