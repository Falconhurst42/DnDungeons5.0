@page
@model DnDungeons.Pages.EnemyInRooms.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Enemy in Room</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EnemyInRoom.EnemyID" class="control-label"></label>
                <select asp-for="EnemyInRoom.EnemyID" class ="form-control" asp-items="ViewBag.EnemyID"></select>
            </div>
            <div class="form-group">
                <label asp-for="EnemyInRoom.Count" class="control-label"></label>
                <input asp-for="EnemyInRoom.Count" class="form-control" />
                <span asp-validation-for="EnemyInRoom.Count" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnemyInRoom.Name" class="control-label"></label>
                <input asp-for="EnemyInRoom.Name" class="form-control" />
                <span asp-validation-for="EnemyInRoom.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnemyInRoom.Description" class="control-label"></label>
                <input asp-for="EnemyInRoom.Description" class="form-control" />
                <span asp-validation-for="EnemyInRoom.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Dungeons/Details" asp-route-id="@Model.DungeonID">Back to Dungeon</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
